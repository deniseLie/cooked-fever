<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/game_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.example.cooked_fever.game.GameView
        android:id="@+id/game_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" /> <!-- Hidden until game starts -->

    <LinearLayout
        android:id="@+id/main_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:background="#FFFAF0"
        android:padding="32dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cooked Fever"
            android:textSize="36sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="24dp" />

        <Button
            android:id="@+id/startButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Game" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/restart_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:background="#AA000000"
        android:visibility="gone"
        android:padding="24dp">

        <TextView
            android:id="@+id/game_over_text"
            android:text="Game Over"
            android:textColor="#FFFFFF"
            android:textSize="36sp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"/>

        <!-- ⭐ Star Rating Row -->
        <LinearLayout
            android:id="@+id/star_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <ImageView
                android:id="@+id/star1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/star_empty"
                android:contentDescription="Star 1" />

            <ImageView
                android:id="@+id/star2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/star_empty"
                android:contentDescription="Star 2"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" />

            <ImageView
                android:id="@+id/star3"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/star_empty"
                android:contentDescription="Star 3" />
        </LinearLayout>

        <Button
            android:id="@+id/restart_button"
            android:text="Restart Game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</FrameLayout>
